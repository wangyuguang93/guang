<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="8" >

    <Button
        android:id="@+id/a1"
        android:text="1" />

    <Button
        android:id="@+id/a2"
        android:layout_column="2"
        android:text="2" />

    <Button
        android:id="@+id/a3"
        android:text="3" />

    <Button
        android:id="@+id/achu"
        android:text="/" />

    <Button
        android:id="@+id/a4"
        android:text="4" />

    <Button
        android:id="@+id/a5"
        android:layout_column="2"
        android:text="5" />

    <Button
        android:id="@+id/a6"
        android:text="6" />

    <Button
        android:id="@+id/achen"
        android:text="x" />

    <Button
        android:id="@+id/a7"
        android:text="7" />

    <Button
        android:id="@+id/a8"
        android:layout_column="2"
        android:text="8" />

    <Button
        android:id="@+id/a9"
        android:text="9" />

    <Button
        android:id="@+id/ajian"
        android:text="-" />

    <Button
        android:id="@+id/a0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="0" />

    <Button
        android:id="@+id/adian"
        android:text="." />

    <Button
        android:id="@+id/ajia"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:text="+" />

    <Button
        android:id="@+id/adeng"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:text="=" />

    <LinearLayout android:layout_gravity="fill_horizontal" >

        <TextView
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="计算结果：" />

    </LinearLayout>

</GridLayout>